<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vincius.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityLogin"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="Cadastro"
            android:name=".ActivityCadastro" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityLogin"/>
        </activity>
        <activity android:name=".ActivityPerfil" />
        <activity android:name=".ActivityHome"
            android:theme = "@style/AppTheme.NoActionBar"
            />

        <activity android:label="@string/alterarsenha"
            android:name=".ActivityResetSenha">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActivityLogin"/>

        </activity>
    </application>

</manifest>